                <input type="text" class="login-field" value="{{usuario}}" disabled="true" required placeholder="Usuario" name="usuario" id="usuario"  autofocus >
                <label class="login-field-icon fui-user" for="login-name"></label>
                </div>

                <div class="control-group">
                <input type="text" class="login-field" value="" placeholder="Password" required name="password">
                <label class="login-field-icon fui-user" for="login-name"></label>
                </div>
              

                               
                 {{/each}}
              <button class="btn2 btn-primary btn2-large btn2-block" type="submit" >
               Modificar
              </button>
              </form>
               
