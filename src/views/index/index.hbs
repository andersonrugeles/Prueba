<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="#" />  

  
  </head>
    
  <body> 
     <header>
         <h1 class="text-center text-light">LIST CONTACTS</h1>
        
     </header>    
    <div style="height:50px"></div>
      {{#if succes}}
                <div class="container p-4">
                 <div class="row">
                      <div class="col-md-4 mx-auto">
              <div class="alert alert-danger alert-dismissible fade show" role="alert"> 
              {{succes}}
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
              </button>
              </div>
           </div>
         </div>
      </div>
      {{/if}}
    <!--Ejemplo tabla con DataTables-->
    <div class="container">

        <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive">   
                  
                        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                       
                        <thead>
                             
                            <tr>
                                <th>Id Contact</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>                               
                                <th>Contact Number</th>
                                <th>                               
                                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#agregarContacto">
                                        Agregar
                                        </button></th>
                          </tr>
                        </thead>
                        <tbody>
                             {{#each muestra}}
                            <tr>
                                <td>{{id_contacto}}</td>
                                <td>{{nombre}}</td>
                                <td>{{apellido}}</td>
                                <td>{{email}}</td>                                
                                <td>{{numero_contacto}}</td>
                                <td>
                                  
                                 <!-- Button trigger modal -->
                                 
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modificarContacto{{id_contacto}}">
       Modificar
      </button>
      
    
       <!-- Modal Modificar-->
          <div class="modal fade" id="modificarContacto{{id_contacto}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <form action="/modificar_contacto/{{id_contacto}}" method="post">
                <div class="modal-content">
                  <div class="modal-header">
                     <h5 class="modal-title" id="exampleModalLabel">Modificar</h5>
                     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                     </button>
                  </div>
          <div class="modal-body">
  
            <div class="input-group input-group-sm mb-3">
             <div class="input-group-prepend">
             <span class="input-group-text" id="inputGroup-sizing-sm">First Name</span>
             </div>
      <input type="text" class="form-control" 
        aria-label="Sizing example input" name="nombre" value="{{nombre}}" aria-describedby="inputGroup-sizing-sm">
      </div>              


      <div class="input-group input-group-sm mb-3">
          <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-sm">Last Name</span>
          </div>
      <input type="text" class="form-control" 
        aria-label="Sizing example input" name="apellido" value="{{apellido}}" aria-describedby="inputGroup-sizing-sm">
      </div>      
    
      <div class="input-group input-group-sm mb-3">
          <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-sm">Email</span>
          </div>
      <input type="text" class="form-control" 
        aria-label="Sizing example input" name="email" value="{{email}}" aria-describedby="inputGroup-sizing-sm">
      </div> 
        
       <div class="input-group input-group-sm mb-3">
          <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-sm">Contact Number</span>
          </div>
      <input type="text" class="form-control" 
        aria-label="Sizing example input" name="numero_contacto" value="{{numero_contacto}}" aria-describedby="inputGroup-sizing-sm">
      </div>
      

    </div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
  <button type="submit" class="btn btn-primary">Guardar</button>
     </div>
      </div>
       </div>
</div>
</form>

              <!-- Modal Eliminar-->
      <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#eliminarContacto{{id_contacto}}">
       Eliminar
      </button>
      
       <!-- Modal -->
          <div class="modal fade" id="eliminarContacto{{id_contacto}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <form action="delete/{{id_contacto}}" method="post">
                <div class="modal-content">
                  <div class="modal-header">
                     <h5 class="modal-title" id="exampleModalLabel">Eliminar</h5>
                     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                     </button>
                  </div>
          <div class="modal-body">
                      
      
          <label> Deseas eliminar este producto?</label>
      
      

    </div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
  <button type="submit" class="btn btn-danger">Eliminar</button>
     </div>
      </div>
       </div>
</div>
</form>

                                </td>

                                
                            </tr>
                          
                                   
                                         
                        </tbody>  
                         
                   {{/each}}      
                     <!-- Modal Agregar -->
        <!-- Modal -->
          <div class="modal fade" id="agregarContacto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <form action="/agregar_contacto" method="post">
                <div class="modal-content">
                  <div class="modal-header">
                     <h5 class="modal-title" id="exampleModalLabel">Agregar</h5>
                     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                     </button>
                  </div>
          <div class="modal-body">
  
            <div class="input-group input-group-sm mb-3">
             <div class="input-group-prepend">
             <span class="input-group-text" id="inputGroup-sizing-sm">First Name</span>
             </div>
      <input type="text" class="form-control" 
        aria-label="Sizing example input" name="nombre"  aria-describedby="inputGroup-sizing-sm">
      </div>              


      <div class="input-group input-group-sm mb-3">
          <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-sm">Last Name</span>
          </div>
      <input type="text" class="form-control" 
        aria-label="Sizing example input" name="apellido"  aria-describedby="inputGroup-sizing-sm">
      </div>      
    
      <div class="input-group input-group-sm mb-3">
          <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-sm">Email</span>
          </div>
      <input type="text" class="form-control" 
        aria-label="Sizing example input" name="email"  aria-describedby="inputGroup-sizing-sm">
      </div> 
        
       <div class="input-group input-group-sm mb-3">
          <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-sm">Contact Number</span>
          </div>
      <input type="text" class="form-control" 
        aria-label="Sizing example input" name="numero_contacto" aria-describedby="inputGroup-sizing-sm">
      </div>
      

    </div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
  <button type="submit" class="btn btn-primary">Guardar</button>
     </div>
      </div>
       </div>
</div>
</form>
                       </table>                  
                    </div>
                </div>
        </div>  
    </div>    
     

    
    
  </body>
</html>
